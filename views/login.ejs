<%- include('partials/header') -%>

<main class="bg-cover" style="background-image: url('/imgs/berry2.png'); background-position: 50% 33%; background-size: cover;">
  <section class="min-h-screen flex items-center justify-center py-16">

    <!-- Center Login Form -->
    <div class="flex items-center justify-center w-full px-4 sm:px-6 lg:px-8">
      <div class="bg-zinc-800 bg-opacity-90 p-8 rounded-lg shadow-lg w-full max-w-md">
        <!-- Error Messages -->
        <% if (locals.messages.errors) { %>
          <% messages.errors.forEach(el => { %>
            <div class="bg-red-100 border-l-4 border-red-500 text-red-700 p-4 mb-3 rounded">
              <%= el.msg %>
            </div>
          <% }) %>
        <% } %>

        <!-- Info Messages -->
        <% if (locals.messages.info) { %>
          <% messages.info.forEach(el => { %>
            <div class="bg-blue-100 border-l-4 border-blue-500 text-blue-700 p-4 mb-3 rounded">
              <%= el.msg %>
            </div>
          <% }) %>
        <% } %>

        <!-- Login Form -->
        <h1 class="text-2xl font-semibold text-white text-center mb-5">Login</h1>
        <form action="/login" method="POST" class="space-y-4">
          <div>
            <label for="exampleInputEmail1" class="block text-white font-semibold mb-2">Email address</label>
            <input
              type="email"
              id="exampleInputEmail1"
              name="email"
              class="w-full px-3 py-2 border border-gray-800 rounded-md focus:outline-none focus:ring focus:ring-blue-200 text-black bg-white"
              aria-describedby="emailHelp"
            />
          </div>
          <div>
            <label for="exampleInputPassword1" class="block text-white font-semibold mb-2">Password</label>
            <input
              type="password"
              id="exampleInputPassword1"
              name="password"
              class="w-full px-3 py-2 border mb-2 border-gray-800 rounded-md focus:outline-none focus:ring focus:ring-blue-200 text-black bg-white"
            />
          </div>
          <button type="submit" class="w-full bg-orange-600 text-white font-semibold py-2 rounded-md hover:bg-gray-400 hover:opacity-75">
            Submit
          </button>
        </form>
      </div>
    </div>
  </section>
</main>





<%- include('partials/footer') -%>
