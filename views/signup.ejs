<%- include('partials/header') -%>
<section class="grid grid-cols-1 md:grid-cols-3 p-0">
    <!-- Left Image -->
    <div class="col-span-1 overflow-hidden">
      <img src="/imgs/pool.png" alt="Logo" class="w-full h-full object-cover">
    </div>
  
    <!-- Center Sign-Up Form -->
    <div class="flex items-center justify-center p-8 bg-zinc-950 col-span-1 md:col-span-1">
      <div class="text-center w-full max-w-md">
        <h1 class="text-2xl font-semibold text-white text-pretty mb-5 mt-0">Sign Up</h1>
  
        <!-- Error and Info Messages -->
        <% if (locals.messages.errors) { %>
          <% messages.errors.forEach(el => { %>
            <div class="bg-red-100 border-l-4 border-red-500 text-red-700 p-4 mb-3 rounded">
              <%= el.msg %>
            </div>
          <% }) %>
        <% } %>
  
        <% if (locals.messages.info) { %>
          <% messages.info.forEach(el => { %>
            <div class="bg-blue-100 border-l-4 border-blue-500 text-blue-700 p-4 mb-3 rounded">
              <%= el.msg %>
            </div>
          <% }) %>
        <% } %>
  
        <!-- Form -->
        <form action="/signup" method="POST" class="space-y-4">
          <div class="mb-4">
            <label for="userName" class="block text-white font-semibold mb-2">User Name</label>
            <input type="text" class="text-black bg-white border-gray-800 w-full px-3 py-2 border rounded-md focus:outline-none focus:ring focus:ring-blue-200" id="userName" name="userName">
          </div>
  
          <div class="mb-4">
            <label for="exampleInputEmail1" class="block text-white font-semibold mb-2">Email address</label>
            <input type="email" class="text-black bg-white border-gray-800 w-full px-3 py-2 border rounded-md focus:outline-none focus:ring focus:ring-blue-200" id="exampleInputEmail1" name="email">
            <p id="emailHelp" class="text-gray-500 text-sm mt-1">We'll never share your email with anyone else.</p>
          </div>
  
          <div class="mb-4">
            <label for="password" class="block text-white font-semibold mb-2">Password</label>
            <input type="password" class="text-black bg-white border-gray-800 w-full px-3 py-2 border rounded-md focus:outline-none focus:ring focus:ring-blue-200" id="password" name="password">
          </div>
  
          <div class="mb-4">
            <label for="confirmPassword" class="block text-white font-semibold mb-2">Confirm Password</label>
            <input type="password" class="text-black bg-white border-gray-800 w-full px-3 py-2 border rounded-md focus:outline-none focus:ring focus:ring-blue-200 mb-3" id="confirmPassword" name="confirmPassword">
          </div>
  
          <button type="submit" class="w-full bg-orange-600 hover:bg-gray-400 text-white font-semibold py-2 rounded-md hover:opacity-75">Submit</button>
        </form>
      </div>
    </div>
  
    <!-- Right Image -->
    <div class="col-span-1 overflow-hidden">
      <img src="/imgs/RunningHill.png" alt="Logo" class="w-full h-full object-cover">
    </div>
  </section>
  
<%- include('partials/footer') -%>